!!! 5
%html
  %head
    %title Framed copypasta
    =stylesheet_link_tag 'compiled/framed'
    =stylesheet_link_tag 'compiled/copypasta'
  %body#copy-pasta-frame
    -if @errors
      .error
        %ul
          -@errors.keys.each do |f|
            -@errors[f].each do |e|
              %li
                = f.to_s.humanize
                = e
    =yield
    =javascript_include_tag 'jquery-1.4.2.min', 'application'
    =javascript_include_tag 'framed'
    :javascript
      parent_url = '#{escape_javascript params[:url]}';
